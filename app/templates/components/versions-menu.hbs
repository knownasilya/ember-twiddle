{{#paper-menu position='target-right target' as |menu|}}
  {{#menu.trigger data-test-ember-version class='layout-column'}}
    {{#paper-button class='md-menu-origin'}}
      Ember <b>{{emberCli.versions.ember}}</b>
      {{paper-icon 'arrow drop up'}}
    {{/paper-button}}
  {{/menu.trigger}}
  {{#menu.content width=2 as |content|}}
    {{#each versions as |version| }}
      {{#content.menu-item data-test-ember-version-value=version class='md-menu-align-target' onClick=(action 'versionSelected' 'ember' version)}}
        {{version}}
      {{/content.menu-item}}
    {{/each}}
  {{/menu.content}}
{{/paper-menu}}

