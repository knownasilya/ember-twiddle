{{#paper-menu position='target-right target' as |menu|}}
  {{#menu.trigger class='layout-column'}}
    {{#paper-button class='md-menu-origin'}}
      {{paper-icon 'keyboard' size=21}}
      Keystroke Mode <b>{{keyMap}}</b>
      {{paper-icon 'arrow drop up'}}
    {{/paper-button}}
  {{/menu.trigger}}
  {{#menu.content width=2 as |content|}}
    {{#each modes as |mode|}}
      {{#content.menu-item class='md-menu-align-target' onClick=(action 'setKeyMap' mode.id)}}
        {{mode.label}}
      {{/content.menu-item}}
    {{/each}}
  {{/menu.content}}
{{/paper-menu}}